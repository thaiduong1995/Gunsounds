<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_setting_main"
    tools:context=".ui.fragment.SettingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold_700"
                android:text="@string/setting"
                android:textSize="36sp"
                android:layout_marginTop="@dimen/size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutButton"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_0"
                android:background="@drawable/bg_card"
                android:layout_marginTop="@dimen/size_24"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent=".8"
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0">


                <LinearLayout
                    android:id="@+id/vibrateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/flashLayout">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchVibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/switch_height_button"
                        android:layout_gravity="center_vertical"
                        android:thumb="@drawable/switch_thumb_custom"
                        app:trackTint="@drawable/switch_track_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/vibrate"
                        android:textSize="@dimen/text_size_24"
                        android:textColor="@color/text_secondary_color"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_vibrate_mode" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flashLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/vibrateLayout"
                    app:layout_constraintTop_toBottomOf="@id/vibrateLayout"
                    app:layout_constraintBottom_toTopOf="@id/soundLayout">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchFlash"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/switch_height_button"
                        android:layout_gravity="center_vertical"
                        android:thumb="@drawable/switch_thumb_custom"
                        app:trackTint="@drawable/switch_track_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/flash"
                        android:textSize="@dimen/text_size_24"
                        android:textColor="@color/text_secondary_color"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_flash_mode" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/soundLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/flashLayout"
                    app:layout_constraintTop_toBottomOf="@id/flashLayout"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSound"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:thumb="@drawable/switch_thumb_custom"
                        app:trackTint="@drawable/switch_track_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="@string/sound"
                        android:textSize="@dimen/text_size_24"
                        android:textColor="@color/text_secondary_color"
                        app:drawableStartCompat="@drawable/ic_sound_mode" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.cem.admodule.manager.CustomNativeView
                android:id="@+id/nativeView"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:ad_view_layout="@layout/admob_native_ad_view_setting"
                android:layout_marginTop="@dimen/size_24"
                app:layout_constraintTop_toBottomOf="@id/layoutButton"
                app:layout_constraintEnd_toEndOf="@id/layoutButton"
                app:layout_constraintStart_toStartOf="@id/layoutButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"/>

            <TextView
                android:id="@+id/btnClose"
                style="@style/PrimaryButton.Style"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/size_50"
                android:layout_marginHorizontal="@dimen/size_24"
                android:layout_marginTop="@dimen/size_16"
                android:padding="0dp"
                android:text="@string/back"
                android:textColor="@color/text_tertiary_color"
                app:layout_constraintEnd_toEndOf="@+id/nativeView"
                app:layout_constraintStart_toStartOf="@+id/nativeView"
                app:layout_constraintTop_toBottomOf="@+id/nativeView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>