<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.GunDetailActivity">

    <ImageView
        android:id="@+id/imvBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_window_secondary"/>

    <com.cemsofwave.gunsimulator.ui.customview.GunShootControllerView
        android:id="@+id/coverView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bulletLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/modeSelectorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/size_16"
        android:layout_marginBottom="@dimen/mar_ver_common">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="30"
            tools:listitem="@layout/item_bullet"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvBulletCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold_700"
            android:textColor="@color/text_secondary_color"
            android:textSize="22sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imvBullet"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="500X"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imvBullet"
            android:layout_width="@dimen/bullet_width"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_bullet"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:src="@drawable/ic_back"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/btnShowInfo"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:src="@drawable/ic_info"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <CheckBox
        android:id="@+id/btnFullscreen"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:button="@drawable/fullscreen_selector"
        android:buttonTint="@color/transparent"
        android:buttonTintMode="add"
        android:checked="false"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <CheckBox
        android:id="@+id/btnFav"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:button="@drawable/favorite_selector"
        android:buttonTint="@color/transparent"
        android:buttonTintMode="add"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnShowInfo"
        app:layout_constraintStart_toEndOf="@+id/btnShowInfo"
        app:layout_constraintTop_toTopOf="@+id/btnShowInfo"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSetting"
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:src="@drawable/ic_setting"
        android:layout_marginTop="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="@+id/btnFullscreen"
        app:layout_constraintTop_toBottomOf="@+id/btnFullscreen"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/previewLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="90"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintBottom_toTopOf="@+id/bulletLayout"
        app:layout_constraintDimensionRatio="1920:1080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lineFireVer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/lineFireHor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bulletShellView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/gunViewStatic"
            app:layout_constraintStart_toStartOf="@+id/bulletsRequestView"
            app:layout_constraintWidth_percent="0.5"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_progress="1.0"
            app:lottie_fileName="gun/bullet_shell/Bullet shell.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gunViewStatic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_fileName="gun/AK 47/Ak 47.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/smokeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/lineFireVer"
            app:layout_constraintEnd_toStartOf="@+id/lineFireHor"
            app:layout_constraintStart_toStartOf="@+id/lineFireHor"
            app:lottie_autoPlay="false"
            app:lottie_fileName="gun/smoke/smoke.json"
            app:lottie_loop="false" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/fireView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/lineFireVer"
            app:layout_constraintEnd_toStartOf="@+id/lineFireHor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lineFireVer"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_fileName="gun/fire/fire auto.json"
            app:lottie_progress="0" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bulletsRequestView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/white"
            app:lottie_loop="true"
            app:lottie_fileName="gun/reload/Reload Bullet.json"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/modeSelectorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/size_16"
        app:layout_constraintBottom_toTopOf="@+id/bannerBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_16"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:columnCount="2"
            android:rowCount="2">
            <RadioButton
                android:id="@+id/btnSingleShoot"
                style="@style/MyRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="@string/single_shot"
                android:checked="false"/>

            <RadioButton
                android:id="@+id/btnBrushMode"
                style="@style/MyRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="@string/burst_mode"
                android:drawableStart="@drawable/checkbox_selector"
                android:button="@null"/>

            <RadioButton
                android:id="@+id/btnAutoShoot"
                style="@style/MyRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:checked="true"
                android:text="@string/auto_hold"/>

            <RadioButton
                android:id="@+id/btnShake"
                style="@style/MyRadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="@string/shake"/>
        </GridLayout>
    </RadioGroup>

    <com.cemsofwave.gunsimulator.ui.customview.SeekbarVertical
        android:id="@+id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/mar_hor_common"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listSkinLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rv_gun_skin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintHeight_percent="0.5">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSkin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/size_24"
            android:clipToPadding="false"
            android:layout_marginHorizontal="@dimen/size_2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="2"
            tools:listitem="@layout/item_gun_skin"/>

        <ImageView
            android:id="@+id/btnPrevSkin"
            style="@style/ImageButton.Style"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/stroke_rv_skin"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_left"
            android:rotation="90"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/rvSkin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/rvSkin"
            app:tint="@color/text_hint_color"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <ImageView
            android:id="@+id/btnNextSkin"
            style="@style/ImageButton.Style"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:rotation="270"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_left"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/stroke_rv_skin"
            app:layout_constraintStart_toStartOf="@+id/rvSkin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/rvSkin"
            tools:ignore="ContentDescription,ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imvBgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_ver_common"
        android:src="@drawable/ic_background"
        app:layout_constraintEnd_toEndOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvBackground"
        android:layout_width="@dimen/size_32"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/background"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/imvBgLabel"
        app:layout_constraintStart_toStartOf="@+id/imvBgLabel"
        app:layout_constraintTop_toBottomOf="@+id/imvBgLabel"
        tools:listitem="@layout/item_background"
        tools:itemCount="5"/>

    <include
        android:id="@+id/bannerBottom"
        layout="@layout/admob_banner_standard_view"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/viewCoverTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8D000000"
        android:visibility="visible"
        tools:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_line.json"
        app:lottie_loop="true"
        android:visibility="visible"
        tools:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fragmentHost"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>